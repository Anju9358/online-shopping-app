version: "3"
services:

  online_shop:
    build:
      context: .
    conatiner_name: shop-container
    ports:
      - "5173:5173"
    networks:
      - "shop-network"
    volumes:
      - /home/ubuntu/volumes/online_shop:/app/logs

  nginx:
    image: nginx:latest
    container_name: nginx-container
    ports:
      - "80:80"
    networks:
      - "shop-network"
    volumes:
      - /home/ubuntu/volumes/online_shop:/app/logs

networks:
  shop-network:
    driver: "bridge"
